public class Handshakes {
    public static int handshake(int n) {
        if (n <= 1) {
            return 0;
        }
        return (n - 1) + handshake(n - 1);
    }

    public static void main(String[] args) {
        int people = 4; 
        System.out.println("Total handshakes for " + people + " people: " + handshake(people));
    }
}
